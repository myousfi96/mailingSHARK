{
    "name": "mailingSHARK",
    "author": "Fabian Trautsch",
    "version": "0.10",
    "plugin_type": "other",
    "linux_libraries": [
    ],
    "description": "Plugin to collect data from issue tracking systems.",
    "requires": [],
    "created_collections": [
		{
			"name": "mailing_list",
			"shard_key": {"name": "hashed"}
		},
        {
			"name": "message",
			"shard_key": {"message_id": 1, "mailing_list_id": 1},
			"unique": true
		},
        {
			"name": "people",
			"shard_key": {"email": 1, "name": 1},
			"unique": true
		}
	],
    "arguments": [
        {
            "name": "plugin_path",
            "required": true,
            "position": 1,
            "type": "install",
            "description": "path to root folder of plugin"
        },
        {
            "name": "plugin_path",
            "required": true,
            "position": 1,
            "type": "execute",
            "description": "path to root folder of plugin"
        },
        {
            "name": "db_user",
            "required": false,
            "position": 2,
            "type": "execute",
            "description": "database user for the mongodb"
        },
        {
            "name": "db_password",
            "required": false,
            "position": 3,
            "type": "execute",
            "description": "password for the user of the mongodb"
        },
        {
            "name": "db_database",
            "required": true,
            "position": 4,
            "type": "execute",
            "description": "name of the database in the mongodb"
        },
        {
            "name": "db_hostname",
            "required": true,
            "position": 5,
            "type": "execute",
            "description": "hostname of the server, where the mongodb runs on"
        },
        {
            "name": "db_port",
            "required": true,
            "position": 6,
            "type": "execute",
            "description": "port on which the mongodb is listening on"
        },
        {
            "name": "db_authentication",
            "required": false,
            "position": 7,
            "type": "execute",
            "description": "databse against which users are authenticated"
        },
        {
            "name": "project_name",
            "required": true,
            "position": 8,
            "type": "execute",
            "description": "name of the project to which the mailing list belongs"
        },
        {
            "name": "mailingurl",
            "required": true,
            "position": 9,
            "type": "execute",
            "description": "url to the issue tracking system"
        },
        {
            "name": "backend",
            "required": true,
            "position": 10,
            "type": "execute",
            "description": "backend to choose for the plugin execution"
        },
        {
            "name": "proxy_host",
            "required": false,
            "position": 11,
            "type": "execute",
            "description": "host to the proxy, if used"
        },
        {
            "name": "proxy_port",
            "required": false,
            "position": 12,
            "type": "execute",
            "description": "port of the proxy"
        },
        {
            "name": "proxy_user",
            "required": false,
            "position": 13,
            "type": "execute",
            "description": "user of the proxy"
        },
        {
            "name": "proxy_password",
            "required": false,
            "position": 14,
            "type": "execute",
            "description": "password of the proxy"
        },
        {
            "name": "output",
            "required": true,
            "position": 15,
            "type": "execute",
            "description": "temporary directory that can be used for the output"
        },
        {
            "name": "debug",
            "required": false,
            "position": 16,
            "type": "execute",
            "description": "debug level, default is debug"
        }
    ]
}